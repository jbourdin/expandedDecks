{% extends 'base.html.twig' %}

{% block title %}Events â€” Expanded Decks{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="mb-0">Upcoming Events</h1>
        {% if is_granted('ROLE_ORGANIZER') %}
            <a href="{{ path('app_event_new') }}" class="btn btn-gold">+ New Event</a>
        {% endif %}
    </div>

    {% if events|length > 0 %}
        <div class="row">
            {% for event in events %}
                <div class="col-md-6 mb-3">
                    <div class="card shadow-sm h-100">
                        <div class="card-body">
                            <h5 class="card-title">
                                <a href="{{ path('app_event_show', {id: event.id}) }}">{{ event.name }}</a>
                            </h5>
                            <p class="text-muted mb-1">
                                {{ event.date|date('M j, Y g:ia') }}
                                {% if event.location %} &mdash; {{ event.location }}{% endif %}
                            </p>
                            <p class="mb-0">
                                <small>
                                    <strong>Format:</strong> {{ event.format }}
                                    {% if event.tournamentStructure %}
                                        &middot; {{ event.tournamentStructure.value|replace({'_': ' '})|title }}
                                    {% endif %}
                                    &middot; Organized by {{ event.organizer.screenName }}
                                </small>
                            </p>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% else %}
        <div class="card shadow-sm">
            <div class="card-body text-center py-5">
                <p class="text-muted mb-0">No upcoming events.</p>
            </div>
        </div>
    {% endif %}
{% endblock %}
