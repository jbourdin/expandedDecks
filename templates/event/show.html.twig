{% extends 'base.html.twig' %}

{% block title %}{{ event.name }} — Expanded Decks{% endblock %}

{% block body %}
    <div class="card shadow-sm mb-3">
        <div class="card-header card-header-themed d-flex justify-content-between align-items-center">
            <h5 class="mb-0">{{ event.name }}</h5>
            <div class="d-flex align-items-center gap-2">
                {% if event.cancelledAt %}
                    <span class="badge bg-danger">Cancelled</span>
                {% endif %}
                {% if event.eventId %}
                    <span class="badge bg-secondary">ID: {{ event.eventId }}</span>
                {% endif %}
                {% if isOrganizer and not event.cancelledAt %}
                    <a href="{{ path('app_event_edit', {id: event.id}) }}" class="btn btn-sm btn-outline-light">Edit</a>
                {% endif %}
            </div>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <table class="table table-sm table-themed mb-0">
                        <tbody>
                            <tr>
                                <th>Date</th>
                                <td>
                                    {{ event.date|date('M j, Y g:ia') }}
                                    {% if event.endDate %}
                                        — {{ event.endDate|date('M j, Y g:ia') }}
                                    {% endif %}
                                </td>
                            </tr>
                            <tr>
                                <th>Timezone</th>
                                <td>{{ event.timezone }}</td>
                            </tr>
                            <tr>
                                <th>Format</th>
                                <td>{{ event.format }}</td>
                            </tr>
                            <tr>
                                <th>Organizer</th>
                                <td>{{ event.organizer.screenName }}</td>
                            </tr>
                            {% if event.location %}
                                <tr>
                                    <th>Location</th>
                                    <td>{{ event.location }}</td>
                                </tr>
                            {% endif %}
                            <tr>
                                <th>Registration</th>
                                <td><a href="{{ event.registrationLink }}" target="_blank" rel="noopener">{{ event.registrationLink }}</a></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <div class="col-md-6">
                    <table class="table table-sm table-themed mb-0">
                        <tbody>
                            {% if event.tournamentStructure %}
                                <tr>
                                    <th>Structure</th>
                                    <td>{{ event.tournamentStructure.value|replace({'_': ' '})|title }}</td>
                                </tr>
                            {% endif %}
                            {% if event.minAttendees or event.maxAttendees %}
                                <tr>
                                    <th>Attendees</th>
                                    <td>
                                        {% if event.minAttendees %}Min: {{ event.minAttendees }}{% endif %}
                                        {% if event.minAttendees and event.maxAttendees %} / {% endif %}
                                        {% if event.maxAttendees %}Max: {{ event.maxAttendees }}{% endif %}
                                    </td>
                                </tr>
                            {% endif %}
                            {% if event.roundDuration or event.topCutRoundDuration %}
                                <tr>
                                    <th>Round duration</th>
                                    <td>
                                        {% if event.roundDuration %}{{ event.roundDuration }} min{% endif %}
                                        {% if event.roundDuration and event.topCutRoundDuration %} / {% endif %}
                                        {% if event.topCutRoundDuration %}Top cut: {{ event.topCutRoundDuration }} min{% endif %}
                                    </td>
                                </tr>
                            {% endif %}
                            {% if event.entryFeeAmount is not null %}
                                <tr>
                                    <th>Entry fee</th>
                                    <td>{{ (event.entryFeeAmount / 100)|number_format(2) }}{% if event.entryFeeCurrency %} {{ event.entryFeeCurrency }}{% endif %}</td>
                                </tr>
                            {% endif %}
                            <tr>
                                <th>Decklist mandatory</th>
                                <td>{{ event.decklistMandatory ? 'Yes' : 'No' }}</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>

            {% if event.description %}
                <hr>
                <p class="mb-0">{{ event.description|nl2br }}</p>
            {% endif %}
        </div>
    </div>

    {% if isOrganizer and not event.cancelledAt %}
        <div class="card shadow-sm mb-3">
            <div class="card-header card-header-themed">
                <h6 class="mb-0">Staff Team</h6>
            </div>
            <div class="card-body">
                {% if event.staff is not empty %}
                    <ul class="list-group list-group-flush mb-3">
                        {% for staffMember in event.staff %}
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                {{ staffMember.user.screenName }}
                                <form method="post" action="{{ path('app_event_remove_staff', {id: event.id, staffId: staffMember.id}) }}" class="d-inline">
                                    <input type="hidden" name="_token" value="{{ csrf_token('remove-staff-' ~ staffMember.id) }}">
                                    <button type="submit" class="btn btn-sm btn-outline-danger">Remove</button>
                                </form>
                            </li>
                        {% endfor %}
                    </ul>
                {% else %}
                    <p class="text-muted mb-3">No staff assigned yet.</p>
                {% endif %}

                <form method="post" action="{{ path('app_event_assign_staff', {id: event.id}) }}" class="d-flex gap-2">
                    <input type="hidden" name="_token" value="{{ csrf_token('assign-staff-' ~ event.id) }}">
                    <input type="hidden" name="user_query" value="">
                    <div class="flex-grow-1" style="position: relative;">
                        <input type="text" class="form-control form-control-sm" placeholder="Screen name, email, or Pokemon ID" required data-staff-autocomplete data-search-url="{{ path('app_user_search') }}">
                    </div>
                    <button type="submit" class="btn btn-sm btn-primary text-nowrap">Add Staff</button>
                </form>
            </div>
        </div>
    {% endif %}

    {% if not event.cancelledAt %}
        <div class="card shadow-sm mb-3">
            <div class="card-header card-header-themed">
                <h6 class="mb-0">Participation</h6>
            </div>
            <div class="card-body">
                {% set playerCount = event.countByState(constant('App\\Enum\\EngagementState::RegisteredPlaying')) %}
                {% set spectatorCount = event.countByState(constant('App\\Enum\\EngagementState::RegisteredSpectating')) %}

                <p class="mb-3">
                    <strong>{{ playerCount }}</strong> player{{ playerCount != 1 ? 's' : '' }},
                    <strong>{{ spectatorCount }}</strong> spectator{{ spectatorCount != 1 ? 's' : '' }}
                </p>

                {% if userEngagement %}
                    {% if userEngagement.state.value == 'registered_playing' %}
                        <span class="badge bg-success me-2">Registered (Playing)</span>
                        <form method="post" action="{{ path('app_event_participate', {id: event.id}) }}" class="d-inline">
                            <input type="hidden" name="_token" value="{{ csrf_token('participate-event-' ~ event.id) }}">
                            <input type="hidden" name="mode" value="spectating">
                            <button type="submit" class="btn btn-sm btn-outline-secondary">Switch to Spectator</button>
                        </form>
                    {% elseif userEngagement.state.value == 'registered_spectating' %}
                        <span class="badge bg-info me-2">Registered (Spectating)</span>
                        <form method="post" action="{{ path('app_event_participate', {id: event.id}) }}" class="d-inline">
                            <input type="hidden" name="_token" value="{{ csrf_token('participate-event-' ~ event.id) }}">
                            <input type="hidden" name="mode" value="playing">
                            <button type="submit" class="btn btn-sm btn-outline-secondary">Switch to Player</button>
                        </form>
                    {% endif %}
                    <form method="post" action="{{ path('app_event_withdraw', {id: event.id}) }}" class="d-inline ms-1">
                        <input type="hidden" name="_token" value="{{ csrf_token('withdraw-event-' ~ event.id) }}">
                        <button type="submit" class="btn btn-sm btn-outline-danger">Withdraw</button>
                    </form>
                {% else %}
                    <form method="post" action="{{ path('app_event_participate', {id: event.id}) }}" class="d-inline me-1">
                        <input type="hidden" name="_token" value="{{ csrf_token('participate-event-' ~ event.id) }}">
                        <input type="hidden" name="mode" value="playing">
                        <button type="submit" class="btn btn-sm btn-primary">Register as Player</button>
                    </form>
                    <form method="post" action="{{ path('app_event_participate', {id: event.id}) }}" class="d-inline">
                        <input type="hidden" name="_token" value="{{ csrf_token('participate-event-' ~ event.id) }}">
                        <input type="hidden" name="mode" value="spectating">
                        <button type="submit" class="btn btn-sm btn-outline-primary">Register as Spectator</button>
                    </form>
                {% endif %}
            </div>
        </div>
    {% endif %}

    {% if not event.cancelledAt and not event.finishedAt %}
        <div class="card shadow-sm mb-3">
            <div class="card-header card-header-themed">
                <h6 class="mb-0">Deck Borrowing</h6>
            </div>
            <div class="card-body">
                {% if isParticipant and availableDecks is not empty %}
                    <form method="post" action="{{ path('app_borrow_request') }}" class="mb-3">
                        <input type="hidden" name="_token" value="{{ csrf_token('borrow-request-' ~ event.id) }}">
                        <input type="hidden" name="event_id" value="{{ event.id }}">
                        <div class="row g-2 align-items-end">
                            <div class="col-md-5">
                                <label for="borrow_deck" class="form-label">Deck</label>
                                <select name="deck_id" id="borrow_deck" class="form-select form-select-sm" required>
                                    <option value="">Select a deck...</option>
                                    {% for deck in availableDecks %}
                                        <option value="{{ deck.id }}">{{ deck.name }} ({{ deck.owner.screenName }})</option>
                                    {% endfor %}
                                </select>
                            </div>
                            <div class="col-md-5">
                                <label for="borrow_notes" class="form-label">Notes (optional)</label>
                                <input type="text" name="notes" id="borrow_notes" class="form-control form-control-sm" placeholder="e.g. I'll bring it back right after my match">
                            </div>
                            <div class="col-md-2">
                                <button type="submit" class="btn btn-sm btn-primary w-100">Request</button>
                            </div>
                        </div>
                    </form>
                {% elseif isParticipant %}
                    <p class="text-muted mb-3">No decks are available for borrowing at this event.</p>
                {% else %}
                    <p class="text-muted mb-3">Register as a participant to request deck borrows.</p>
                {% endif %}

                {% if eventBorrows is not empty %}
                    {% set statusColors = {
                        pending: 'warning',
                        approved: 'info',
                        lent: 'primary',
                        returned: 'success',
                        returned_to_owner: 'success',
                        cancelled: 'secondary',
                        overdue: 'danger',
                    } %}
                    <table class="table table-sm table-themed mb-0">
                        <thead>
                            <tr>
                                <th>Deck</th>
                                <th>Borrower</th>
                                <th>Status</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for borrow in eventBorrows %}
                                <tr>
                                    <td><a href="{{ path('app_deck_show', {id: borrow.deck.id}) }}">{{ borrow.deck.name }}</a></td>
                                    <td>{{ borrow.borrower.screenName }}</td>
                                    <td>
                                        <span class="badge bg-{{ statusColors[borrow.status.value] ?? 'secondary' }}">
                                            {{ borrow.status.value|replace({'_': ' '})|title }}
                                        </span>
                                    </td>
                                    <td><a href="{{ path('app_borrow_show', {id: borrow.id}) }}" class="btn btn-sm btn-outline-secondary">View</a></td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                {% else %}
                    <p class="text-muted mb-0">No borrow activity yet.</p>
                {% endif %}
            </div>
        </div>
    {% endif %}

    <div class="d-flex gap-2">
        <a href="{{ path('app_event_list') }}" class="btn btn-sm btn-outline-secondary">Back to events</a>
        {% if isOrganizer and not event.cancelledAt %}
            <form method="post" action="{{ path('app_event_cancel', {id: event.id}) }}" onsubmit="return confirm('Are you sure you want to cancel this event? This cannot be undone.')">
                <input type="hidden" name="_token" value="{{ csrf_token('cancel-event-' ~ event.id) }}">
                <button type="submit" class="btn btn-sm btn-outline-danger">Cancel Event</button>
            </form>
        {% endif %}
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {% if isOrganizer and not event.cancelledAt %}
        {{ encore_entry_script_tags('staff_autocomplete') }}
    {% endif %}
{% endblock %}
