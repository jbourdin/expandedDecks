{% extends 'base.html.twig' %}
{% from 'borrow/_status_badge.html.twig' import badge as borrowBadge %}

{% block title %}Dashboard â€” Expanded Decks{% endblock %}

{% block body %}
    <h1 class="mb-4">Welcome, {{ user.screenName }}!</h1>

    <div class="row">
        <div class="col-md-6 mb-4">
            <div class="card h-100">
                <div class="card-header card-header-themed d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">My Decks</h5>
                    <a href="{{ path('app_deck_new') }}" class="btn btn-sm btn-gold">+ New</a>
                </div>
                <div class="card-body">
                    {% if ownedDecks|length > 0 %}
                        <ul class="list-group list-group-flush">
                            {% for deck in ownedDecks %}
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    <a href="{{ path('app_deck_show', {id: deck.id}) }}"><span class="badge bg-dark me-1">{{ deck.shortTag }}</span>{{ deck.name }}</a>
                                    {% if deck.status.value == 'lent' %}
                                        <span class="badge badge-lent">Lent</span>
                                    {% elseif deck.status.value == 'retired' %}
                                        <span class="badge badge-retired">Retired</span>
                                    {% endif %}
                                </li>
                            {% endfor %}
                        </ul>
                    {% else %}
                        <p class="text-muted mb-0">You don't own any decks yet.</p>
                    {% endif %}
                </div>
            </div>
        </div>

        <div class="col-md-6 mb-4">
            <div class="card h-100">
                <div class="card-header card-header-themed d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Upcoming Events</h5>
                    <div class="d-flex gap-2">
                        <a href="{{ path('app_event_list') }}" class="btn btn-sm btn-outline-light">See all</a>
                        {% if is_granted('ROLE_ORGANIZER') %}
                            <a href="{{ path('app_event_new') }}" class="btn btn-sm btn-gold">+ New</a>
                        {% endif %}
                    </div>
                </div>
                <div class="card-body">
                    {% if events|length > 0 %}
                        <ul class="list-group list-group-flush">
                            {% for event in events %}
                                <li class="list-group-item">
                                    <strong><a href="{{ path('app_event_show', {id: event.id}) }}">{{ event.name }}</a></strong>
                                    <br>
                                    <small class="text-muted">
                                        {{ event.date|date('M j, Y') }}
                                        {% if event.location %} &mdash; {{ event.location }}{% endif %}
                                    </small>
                                </li>
                            {% endfor %}
                        </ul>
                    {% else %}
                        <p class="text-muted mb-0">No upcoming events.</p>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>

    <div class="card mb-4">
        <div class="card-header card-header-themed d-flex justify-content-between align-items-center">
            <h5 class="mb-0">Recent Borrow Activity</h5>
            <a href="{{ path('app_borrow_list') }}" class="btn btn-sm btn-outline-light">See all</a>
        </div>
        <div class="card-body">
            {% if recentBorrows|length > 0 %}
                <div class="table-responsive">
                    <table class="table table-striped table-themed mb-0">
                        <thead>
                            <tr>
                                <th>Deck</th>
                                <th>Event</th>
                                <th>Status</th>
                                <th>Date</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for borrow in recentBorrows %}
                                <tr>
                                    <td><a href="{{ path('app_deck_show', {id: borrow.deck.id}) }}"><span class="badge bg-dark me-1">{{ borrow.deck.shortTag }}</span>{{ borrow.deck.name }}</a></td>
                                    <td><a href="{{ path('app_event_show', {id: borrow.event.id}) }}">{{ borrow.event.name }}</a></td>
                                    <td>{{ borrowBadge(borrow) }}</td>
                                    <td>{{ borrow.requestedAt|date('M j, Y') }}</td>
                                    <td><a href="{{ path('app_borrow_show', {id: borrow.id}) }}" class="btn btn-sm btn-outline-secondary">View</a></td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            {% else %}
                <p class="text-muted mb-0">No borrow activity yet.</p>
            {% endif %}
        </div>
    </div>

    <div class="card mb-4">
        <div class="card-header card-header-themed d-flex justify-content-between align-items-center">
            <h5 class="mb-0">Recent Lend Activity</h5>
            <a href="{{ path('app_lend_list') }}" class="btn btn-sm btn-outline-light">See all</a>
        </div>
        <div class="card-body">
            {% if recentLends|length > 0 %}
                <div class="table-responsive">
                    <table class="table table-striped table-themed mb-0">
                        <thead>
                            <tr>
                                <th>Deck</th>
                                <th>Event</th>
                                <th>Borrower</th>
                                <th>Status</th>
                                <th>Date</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for borrow in recentLends %}
                                <tr>
                                    <td><a href="{{ path('app_deck_show', {id: borrow.deck.id}) }}"><span class="badge bg-dark me-1">{{ borrow.deck.shortTag }}</span>{{ borrow.deck.name }}</a></td>
                                    <td><a href="{{ path('app_event_show', {id: borrow.event.id}) }}">{{ borrow.event.name }}</a></td>
                                    <td>{{ borrow.borrower.screenName }}</td>
                                    <td>{{ borrowBadge(borrow) }}</td>
                                    <td>{{ borrow.requestedAt|date('M j, Y') }}</td>
                                    <td><a href="{{ path('app_borrow_show', {id: borrow.id}) }}" class="btn btn-sm btn-outline-secondary">View</a></td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            {% else %}
                <p class="text-muted mb-0">No lend activity yet.</p>
            {% endif %}
        </div>
    </div>

    {% if is_granted('ROLE_ORGANIZER') or recentManagedBorrows|length > 0 %}
        <div class="card">
            <div class="card-header card-header-themed">
                <h5 class="mb-0">Event Management Activity</h5>
            </div>
            <div class="card-body">
                {% if recentManagedBorrows|length > 0 %}
                    <div class="table-responsive">
                        <table class="table table-striped table-themed mb-0">
                            <thead>
                                <tr>
                                    <th>Deck</th>
                                    <th>Borrower</th>
                                    <th>Event</th>
                                    <th>Status</th>
                                    <th>Date</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for borrow in recentManagedBorrows %}
                                    <tr>
                                        <td><a href="{{ path('app_deck_show', {id: borrow.deck.id}) }}"><span class="badge bg-dark me-1">{{ borrow.deck.shortTag }}</span>{{ borrow.deck.name }}</a></td>
                                        <td>{{ borrow.borrower.screenName }}</td>
                                        <td><a href="{{ path('app_event_show', {id: borrow.event.id}) }}">{{ borrow.event.name }}</a></td>
                                        <td>{{ borrowBadge(borrow) }}</td>
                                        <td>{{ borrow.requestedAt|date('M j, Y') }}</td>
                                        <td><a href="{{ path('app_borrow_show', {id: borrow.id}) }}" class="btn btn-sm btn-outline-secondary">View</a></td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                {% else %}
                    <p class="text-muted mb-0">No event management activity yet.</p>
                {% endif %}
            </div>
        </div>
    {% endif %}
{% endblock %}
