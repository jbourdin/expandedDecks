{% extends 'base.html.twig' %}

{% block title %}Edit {{ deck.name }} â€” Expanded Decks{% endblock %}

{% block body %}
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header card-header-themed">
                    <h5 class="mb-0">Edit {{ deck.name }}</h5>
                </div>
                <div class="card-body">
                    {{ form_start(form) }}
                        {{ form_row(form.name) }}
                        {{ form_row(form.format) }}
                        {{ form_row(form.notes) }}

                        <button type="submit" class="btn btn-gold w-100">Save Changes</button>
                    {{ form_end(form) }}

                    <a href="{{ path('app_deck_show', {id: deck.id}) }}" class="btn btn-outline-secondary w-100 mt-2">Cancel</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
