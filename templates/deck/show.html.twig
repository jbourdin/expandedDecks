{% extends 'base.html.twig' %}
{% from 'borrow/_status_badge.html.twig' import badge as borrowBadge %}

{% macro cardSection(label, cards) %}
    <div class="card shadow-sm">
        <div class="card-header card-header-themed">
            <h5 class="mb-0">{{ label }}</h5>
        </div>
        <div class="card-body p-0">
            <table class="table table-striped table-themed table-sm mb-0">
                <thead>
                    <tr>
                        <th style="width: 32px">Qty</th>
                        <th>Card</th>
                        <th style="width: 56px">Set</th>
                        <th style="width: 40px">#</th>
                    </tr>
                </thead>
                <tbody>
                    {% for card in cards %}
                        <tr>
                            <td>{{ card.quantity }}</td>
                            <td>
                                {% if card.imageUrl %}
                                    <span class="card-hover">
                                        {{ card.cardName }}
                                        <img class="card-hover-img" src="{{ card.imageUrl }}" alt="{{ card.cardName }}">
                                    </span>
                                {% else %}
                                    {{ card.cardName }}
                                {% endif %}
                            </td>
                            <td><code>{{ card.setCode }}</code></td>
                            <td>{{ card.cardNumber }}</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endmacro %}

{% block title %}{{ deck.name }} — Expanded Decks{% endblock %}

{% block body %}
    {# Deck info — compact header #}
    <div class="card shadow-sm mb-3">
        <div class="card-header card-header-themed d-flex justify-content-between align-items-center">
            <h5 class="mb-0">{{ deck.name }}</h5>
            <div class="d-flex align-items-center gap-2">
                {% if deck.status.value == 'lent' %}
                    <span class="badge badge-lent">Lent</span>
                {% elseif deck.status.value == 'retired' %}
                    <span class="badge badge-retired">Retired</span>
                {% endif %}
            </div>
        </div>
        <div class="card-body py-2">
            <div class="d-flex flex-wrap align-items-center gap-3">
                <span><strong>Owner:</strong> {{ deck.owner.screenName }}</span>
                <span><strong>Format:</strong> {{ deck.format }}</span>
                {% if deck.currentVersion %}
                    <span><strong>Version:</strong> v{{ deck.currentVersion.versionNumber }}</span>
                    {% set enrichStatus = deck.currentVersion.enrichmentStatus %}
                    {% if enrichStatus == 'done' %}
                        <span class="badge bg-success" title="Card data enriched">Enriched</span>
                    {% elseif enrichStatus == 'enriching' %}
                        <span class="badge bg-info" title="Card enrichment in progress">
                            <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
                            Enriching…
                        </span>
                    {% elseif enrichStatus == 'failed' %}
                        <span class="badge bg-danger" title="Card enrichment failed">Enrichment failed</span>
                    {% else %}
                        <span class="badge bg-secondary" title="Card enrichment pending">Pending enrichment</span>
                    {% endif %}
                    {% if deck.currentVersion.archetypeName %}
                        <span><strong>Archetype:</strong> {{ deck.currentVersion.archetypeName }}</span>
                    {% endif %}
                {% endif %}
                {% if deck.notes %}
                    <span><strong>Notes:</strong> {{ deck.notes }}</span>
                {% endif %}

                <span class="ms-auto d-flex gap-2">
                    {% if isOwner %}
                        <a href="{{ path('app_deck_edit', {id: deck.id}) }}" class="btn btn-sm btn-outline-primary">Edit</a>
                        <a href="{{ path('app_deck_import', {id: deck.id}) }}" class="btn btn-sm btn-gold">Import List</a>
                    {% endif %}
                    <a href="{{ path('app_dashboard') }}" class="btn btn-sm btn-outline-secondary">Dashboard</a>
                </span>
            </div>
        </div>
    </div>

    {# Borrow activity card #}
    {% if eligibleEvents is not empty or deckBorrows is not empty %}
        <div class="card shadow-sm mb-3">
            <div class="card-header card-header-themed">
                <h5 class="mb-0">Borrow Activity</h5>
            </div>
            <div class="card-body">
                {% if eligibleEvents is not empty %}
                    <form method="post" action="{{ path('app_borrow_request') }}" class="mb-3">
                        <input type="hidden" name="deck_id" value="{{ deck.id }}">
                        <input type="hidden" name="redirect_to" value="deck">
                        <input type="hidden" name="_token" value="">
                        <div class="row g-2 align-items-end">
                            <div class="col-md-5">
                                <label for="borrow_event" class="form-label">Event</label>
                                <select name="event_id" id="borrow_event" class="form-select form-select-sm" required>
                                    <option value="">Select an event...</option>
                                    {% for event in eligibleEvents %}
                                        <option value="{{ event.id }}" data-token="{{ csrf_token('borrow-request-' ~ event.id) }}">
                                            {{ event.name }} ({{ event.date|date('M j, Y') }})
                                        </option>
                                    {% endfor %}
                                </select>
                            </div>
                            <div class="col-md-5">
                                <label for="borrow_notes_deck" class="form-label">Notes (optional)</label>
                                <input type="text" name="notes" id="borrow_notes_deck" class="form-control form-control-sm" placeholder="e.g. I'll bring it back right after my match">
                            </div>
                            <div class="col-md-2">
                                <button type="submit" class="btn btn-sm btn-primary w-100">Request</button>
                            </div>
                        </div>
                    </form>
                    <script>
                        document.getElementById('borrow_event').addEventListener('change', function() {
                            var selected = this.options[this.selectedIndex];
                            var token = selected.getAttribute('data-token') || '';
                            this.closest('form').querySelector('input[name="_token"]').value = token;
                        });
                    </script>
                {% endif %}

                {% if deckBorrows is not empty %}
                    <div class="table-responsive">
                        <table class="table table-striped table-themed table-sm mb-0">
                            <thead>
                                <tr>
                                    <th>Event</th>
                                    <th>Borrower</th>
                                    <th>Status</th>
                                    <th>Date</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for borrow in deckBorrows %}
                                    <tr>
                                        <td><a href="{{ path('app_event_show', {id: borrow.event.id}) }}">{{ borrow.event.name }}</a></td>
                                        <td>{{ borrow.borrower.screenName }}</td>
                                        <td>{{ borrowBadge(borrow) }}</td>
                                        <td>{{ borrow.requestedAt|date('M j, Y') }}</td>
                                        <td><a href="{{ path('app_borrow_show', {id: borrow.id}) }}" class="btn btn-sm btn-outline-secondary">View</a></td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                {% endif %}
            </div>
        </div>
    {% endif %}

    {# Card list — 2 columns on md+, energy under the shortest column #}
    {% if deck.currentVersion and groupedCards|length > 0 %}
        {% set pokemonCards = groupedCards.pokemon|default([]) %}
        {% set trainerCards = groupedCards.trainer|default([]) %}
        {% set energyCards = groupedCards.energy|default([]) %}
        {% set energyInLeft = pokemonCards|length <= trainerCards|length %}

        <div class="row">
            {# Left column: Pokemon + Energy if pokemon is shorter #}
            <div class="col-md-6 mb-3">
                {% if pokemonCards|length > 0 %}
                    {{ _self.cardSection('Pokemon', pokemonCards) }}
                {% endif %}
                {% if energyInLeft and energyCards|length > 0 %}
                    <div class="mt-3">
                        {{ _self.cardSection('Energy', energyCards) }}
                    </div>
                {% endif %}
            </div>

            {# Right column: Trainer + Energy if trainer is shorter #}
            <div class="col-md-6 mb-3">
                {% if trainerCards|length > 0 %}
                    {{ _self.cardSection('Trainer', trainerCards) }}
                {% endif %}
                {% if not energyInLeft and energyCards|length > 0 %}
                    <div class="mt-3">
                        {{ _self.cardSection('Energy', energyCards) }}
                    </div>
                {% endif %}
            </div>
        </div>
    {% else %}
        <div class="card shadow-sm">
            <div class="card-body text-center py-5">
                <p class="text-muted mb-3">No deck list imported yet.</p>
                {% if isOwner %}
                    <a href="{{ path('app_deck_import', {id: deck.id}) }}" class="btn btn-gold">Import Deck List</a>
                {% endif %}
            </div>
        </div>
    {% endif %}

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('deck_show') }}
{% endblock %}
